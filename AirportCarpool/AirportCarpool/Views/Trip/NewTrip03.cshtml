@model AirportCarpool.Models.NewTrip

@{
    ViewBag.Title = "New trip";
}


@using (Html.BeginForm("NewTrip", "Trip", FormMethod.Post)) {
    @Html.AntiForgeryToken()

    <input type="hidden" name="View" value="NewTrip03" />
    @Html.HiddenFor(model => model.LocationFrom);
    @Html.HiddenFor(model => model.LocationTo);
    @Html.HiddenFor(model => model.MovementDateType);
    @Html.HiddenFor(model => model.MovementDate);
    @Html.HiddenFor(model => model.MovementTime);
    @Html.HiddenFor(model => model.FlightNumber);
    <input type="hidden" name="Departure" value="@Html.Raw(Model.Departure)">
    <input type="hidden" name="Arrival" value="@Html.Raw(Model.Arrival)">
    @Html.HiddenFor(model => model.ArrDep);
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Driver, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Driver)
                @Html.ValidationMessageFor(model => model.Driver)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Passenger, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Passenger)
                @Html.ValidationMessageFor(model => model.Passenger)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Seats, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Seats)
                @Html.ValidationMessageFor(model => model.Seats)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Luggage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Luggage)
                @Html.ValidationMessageFor(model => model.Luggage)
            </div>
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </div>
}


