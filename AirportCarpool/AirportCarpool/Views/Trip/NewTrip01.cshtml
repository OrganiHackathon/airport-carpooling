@model AirportCarpool.Models.NewTrip

@{
    ViewBag.Title = "New trip";
}


@using (Html.BeginForm("NewTrip", "Trip", FormMethod.Post)) {
    @Html.AntiForgeryToken()

    <input type="hidden" name="View" value="NewTrip01" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-10">
                <fieldset data-role="controlgroup" data-type="horizontal">
                    <legend>From</legend>
                    <input type="radio" id="LocationFrom1" name="LocationFrom" value="Home" checked />
                    <label for="LocationFrom1">Home</label>
                    <input type="radio" id="LocationFrom2" name="LocationFrom" value="Schiphol" />
                    <label for="LocationFrom2">Schiphol Airport</label>
                </fieldset>
                @Html.ValidationMessageFor(model => model.LocationFrom)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <fieldset data-role="controlgroup" data-type="horizontal">
                    <legend>To</legend>
                    <input type="radio" id="LocationTo1" name="LocationTo" value="Home" />
                    <label for="LocationTo1">Home</label>
                    <input type="radio" id="LocationTo2" name="LocationTo" value="Schiphol" checked />
                    <label for="LocationTo2">Schiphol Airport</label>
                </fieldset>
                @Html.ValidationMessageFor(model => model.LocationTo)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10">
                <fieldset data-role="controlgroup" data-type="horizontal">
                    <legend>Date and time to...</legend>
                    <input type="radio" id="MovementDateType1" name="MovementDateType" value="Arrive" checked />
                    <label for="MovementDateType1">Arrive</label>
                    <input type="radio" id="MovementDateType2" name="MovementDateType" value="Depart" />
                    <label for="MovementDateType2">Depart</label>
                </fieldset>
                @Html.ValidationMessageFor(model => model.MovementDateType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovementDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovementDate)
                @Html.ValidationMessageFor(model => model.MovementDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovementTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovementTime)
                @Html.ValidationMessageFor(model => model.MovementTime)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
