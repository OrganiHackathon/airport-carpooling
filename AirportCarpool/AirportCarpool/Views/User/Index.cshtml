@model AirportCarpool.Models.User

@{
    ViewBag.Title = "Your Account";
}

@section Header {
    @Html.ActionLink("Back", "Index", "Home", null, new { data_icon = "arrow-l" })
    <h1>@ViewBag.Title</h1>
}

<p>
    Logged in as <strong>@User.Identity.Name</strong>.
</p>

@Html.Partial("_UserProfile", Model)

<ul data-role="listview" data-inset="true">
    <li>@Html.ActionLink("Edit", "EditUserProfile", new { id = Model.UserName },null)</li>
    <li>@Html.ActionLink("Change password", "ChangePassword")</li>
    <li>@Html.ActionLink("Log off", "LogOff")</li>
</ul>